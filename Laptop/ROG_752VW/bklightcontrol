#Backlight control script
#!/bin/bash
bkltpath='/sys/class/backlight/intel_backlight/brightness'
value=$1
user=`whoami`

#Let's make sure we are running with root privs
if [ $user != 'root' ]
then
	echo "Please execute with root privileges!"
	exit 1
fi

case $value in
	
	max )
	value=937
	echo $value > $bkltpath ;;

	mid )
	value=469
	echo $value > $bkltpath;;

	low )
	value=5
	echo $value > $bkltpath;;

	current )
	cat $bkltpath ;;

	* )
	echo $value > $bkltpath;;
esac
